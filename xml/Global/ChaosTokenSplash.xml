<Defaults>
  <Text class="CTS"
    scale="0.4 0.4 1"
    ignoreLayout="True"
    font="font_teutonic-arkham"
    outline="black"
    outlineSize="3 -3"/>
</Defaults>

<Panel id="CTS_main"
  active="false">
  <Text id="CTS_modifier"
    class="CTS"
    height="500"
    width="500"
    position="0 420 0"
    fontSize="150">
  </Text>

  <HorizontalLayout id="CTS_image_container"
    height="200"
    width="1200"
    spacing="20"
    position="0 275 0"
    childAlignment="MiddleCenter"
    ignoreLayout="True">
    <Image id="CTS_image1"
      active="false"/>
    <Image id="CTS_image2"
      active="false"/>
    <Image id="CTS_image3"
      active="false"/>
    <Image id="CTS_image4"
      active="false"/>
    <Image id="CTS_image5"
      active="false"/>
  </HorizontalLayout>

  <Text id="CTS_description"
    class="CTS"
    height="1250"
    width="1250"
    position="0 130 0"
    resizeTextForBestFit="true"
    resizeTextMinSize="85"
    horizontalOverflow="Wrap"
    verticalOverflow="Overflow">
  </Text>
</Panel>