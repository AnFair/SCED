<Defaults>
  <Text font="font_teutonic-arkham"
    alignment="MiddleCenter"
    rectAlignment="MiddleCenter"/>
  <Panel class="showHide"
    color="black"
    height="30"
    width="30"
    rectAlignment="MiddleRight"
    offsetXY="0 69"
    outlineSize="2 2"
    outline="#303030"/>
</Defaults>

<!-- window to control bless / curse tokens in chaos bag -->
<!-- height = row heights + 2x outline -->
<TableLayout id="blessCurseManager"
  color="black"
  active="false"
  height="104"
  width="144"
  offsetXY="-2 286"
  rectAlignment="LowerRight"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  raycastTarget="true"
  outlineSize="2 2"
  outline="#303030">
  <!-- token counts -->
  <Row preferredHeight="30">
    <Cell>
      <Text id="countBless"
        fontSize="25"
        text="0 + 0"/>
    </Cell>
    <Cell>
      <Text id="countCurse"
        fontSize="25"
        text="0 + 0"/>
    </Cell>
  </Row>
  <!-- token buttons -->
  <Row preferredHeight="70">
    <Cell>
      <Panel padding="4 4 4 4">
        <Button image="token-bless-small"
          id="imageBless"
          onClick="5933fb/xmlClick"/>
      </Panel>
    </Cell>
    <Cell>
      <Panel padding="4 4 4 4">
        <Button image="token-curse-small"
          id="imageCurse"
          onClick="5933fb/xmlClick"/>
      </Panel>
    </Cell>
  </Row>
</TableLayout>