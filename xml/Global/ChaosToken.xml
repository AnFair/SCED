<Panel id="chaos_token"
  height="225"
  width="225"
  position="0 270 0"
  showAnimation="FadeIn"
  hideAnimation="FadeOut"
  active="false"
  animationDuration="1">
  <Image id="token-splash-image"/>
</Panel>

<Panel id="token_modifier"
  height="200"
  width="600"
  position="0 420 0"
  showAnimation="FadeIn"
  hideAnimation="FadeOut"
  active="false"
  animationDuration="1">
  <Text id="chaos_modifier_text"
    height="200"
    width="200"
    fontSize="60"
    font="font_teutonic-arkham"
    outline="black"
    outlineSize="3 -3">
  </Text>
</Panel>

<Panel id="token_description"
  height="800"
  width="600"
  position="0 120 0"
  showAnimation="FadeIn"
  hideAnimation="FadeOut"
  active="false"
  animationDuration="1">
  <Text id="chaos_splash_text"
    height="500"
    width="500"
    fontSize="50"
    resizeTextForBestFit="true"
    resizeTextMinSize="20"
    font="font_teutonic-arkham"
    outline="black"
    outlineSize="3 -3"
    horizontalOverflow="Wrap"
    verticalOverflow="Overflow">
  </Text>
</Panel>